<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_rect_with_bottomline"
    android:padding="16dp">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/brandIv"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:background="@drawable/shape_rounded_rect_transparent_white_border"
        android:padding="2dp"
        android:scaleType="centerInside"
        android:src="@drawable/bigbazaar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:layout_toLeftOf="@+id/numOffers"
        android:layout_toRightOf="@+id/brandIv"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/brandTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toLeftOf="@+id/brandIv"
            android:layout_toStartOf="@+id/brandIv"
            android:text="McDonalds"
            android:textAllCaps="true"
            android:textColor="@android:color/darker_gray" />

        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:drawableLeft="@drawable/ic_location"
            android:drawablePadding="4dp"
            android:drawableStart="@drawable/ic_location"
            android:gravity="center"
            android:text="Ameerpet"
            android:textColor="@android:color/black" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/numOffers"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:padding="8dp"
        android:text="100 Offers"
        android:textColor="@android:color/darker_gray" />
</RelativeLayout>